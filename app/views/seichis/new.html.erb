<%= render "shared/header" %>

<h2 class="seichi-show-title">聖地を投稿する</h2>
<div class="seichi-new-contents">
  <div class="seichi-new-content">
    <div id="mapragistration">
    </div>
    <div class="seichi-new-forms">
      <%= form_with(model: @seichi, local: true) do |form| %>
        <div class="new-form">
          <%= form.label :title, '作品名' %>
          <%= form.text_field :title, placeholder: "作品名" %>
        </div>
        <div class="new-form">
          <%= form.label :introduction, '場所の紹介'%>
          <%= form.text_area :introduction, placeholder: "場所の紹介" %>
        </div>
        <div class="new-form">
          <%= form.label :category_id, 'カテゴリー' %>
          <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"seichi-category"}) %>
        </div>
        <div class="new-form">
          <%= form.label :prefecture_id, '都道府県'%>
          <%= form.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"seichi-prefecture"}) %>
        </div>
        <div class="new-form">
          <%= form.label :addresses, '都道府県以下の住所'%>
          <%= form.text_field :addresses, placeholder: "都道府県以下の住所"%>
        </div>
        <%= form.hidden_field :latitude, id: "latitude" %>
        <%= form.hidden_field :longitude, id: "longitude" %>
        <div class="new-form-image">
          写真を選択してください： <%= form.file_field :image, id:"seichi-image" %>
        </div>
        <div class="form-btn">
          <%= form.submit "SEND" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "トップページへ戻る", root_path %> 
