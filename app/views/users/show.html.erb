<%= render "shared/header" %>
<div class="mypages">
  <div class="mypage">
    <% if current_user.id == @user.id%>
      <div class="mypagetext">
        マイページ
      </div>
    <% else %>
      <div class="mypagetext"><%= @nickname %>さんのページ</div>
    <% end %>
    <div class="my-indexs">
      <p class="myindextext">投稿一覧</p>
      <div class="my-index">
        <% @seichis.each do |seichi| %>
          <%= link_to seichi.title, seichi_path(seichi.id), class:"myindexseichi" %>
        <% end %>
      </div>
    </div>
    <div class="my-favorites">
      <p class="myfavoritetext">お気に入り登録の一覧</p>
      <div class="my-favorite">
        <% @favorites.each do |favorite| %>
          <%= link_to favorite.seichi.title, seichi_path(favorite.seichi_id), class:"myfavoriteseichi"  %>
        <% end %>
      </div>
    </div>
    <div class="topeditbtns">
      <div class="topeditbtn">
        <%= link_to 'トップページ', root_path ,class:"topbtn" %>
        <% if current_user.id == @user.id %>
          <%= link_to '設定', edit_user_registration_path, class:"editbtn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>