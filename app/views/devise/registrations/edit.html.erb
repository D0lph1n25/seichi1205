<%= render "shared/header" %>

<div class="contents ">
  <div class="container">

    <h2 class="login" >変更する</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'sign_form'%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :current_password, "現在のパスワード" %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'sign_form' %>
      </div>

      <div class="field">
        <%= f.label :password,"新しいパスワード" %> <i>(６文字以上の半角英数字)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'sign_form' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上の半角英数字</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation,"もう一度新しいパスワードを入力してください" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'sign_form' %>
      </div>

      

      <div class="actions">
        <%= f.submit "変更確定", class: 'send' %>
      </div>
    <% end %>
  </div>
</div>