<%= render "shared/header" %>

<h2 class="login">ログイン</h2>
<div class="contents">
  <div class="container-login">
    <div class="error-mes">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <%= form_with model: @user, url: user_session_path, id: 'login_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, class:'sign_form' %>
      </div>

      <div class="field">
        <%= f.label :password ,"パスワード"%><br />
        <%= f.password_field :password, autocomplete: "off", class:'sign_form' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me, "保存状態にする"  %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" ,class:'login_btn'%>
      </div>
    <% end %>
  </div>
</div>