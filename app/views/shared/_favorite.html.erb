<div id="favorite-btn<%= @seichi.id %>">
  <% if user_signed_in? && @seichi.favorited_by?(current_user)%>
    <%=link_to "いいね済", seichi_favorite_path(@seichi.id),  data: { turbo_method: :delete }, class: "seichi_favorites" , remote: true%>
  <% else %>
    <%=link_to "いいねする", seichi_favorites_path(@seichi.id), data: { turbo_method: :post }, class: "seichi_favorites", remote: true %>
  <% end %>
</div>