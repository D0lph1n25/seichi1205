<div id="favorite-btn"<%= @seichi.id %>>
<% if user_signed_in? && current_user.id != @seichi.user_id %>
  <% if @seichi.favorited_by?(current_user)%>
    <%=link_to "お気に入り登録解除", seichi_favorite_path(@seichi.id),  data: { turbo_method: :delete }, class: "seichi-favorites" , remote: true%>
  <% else %>
    <%=link_to "お気に入り登録", seichi_favorites_path(@seichi.id), data: { turbo_method: :post }, class: "seichi-favorites", remote: true %>
  <% end %>
<% end%>
</div>
